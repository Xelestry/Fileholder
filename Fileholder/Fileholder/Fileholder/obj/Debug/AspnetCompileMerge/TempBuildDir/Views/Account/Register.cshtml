@model Fileholder.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}


<div class="container container-fluid bg-dark" style="color: white;">
        <h2 style="color: white;">@ViewBag.Title</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="" style="opacity: 0.9;">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Вводите Email" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Вводите Логин" })
                </div>
                <div class="form-group ">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Вводите пароль" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Повторите пароль" })
                </div>
            </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default btn-outline-success" value="Регистрация" style="margin-bottom:30px;"/>
                </div>
            
            
        }
    </div>



    @*@Scripts.Render("~/bundles/jqueryval")*@
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")

